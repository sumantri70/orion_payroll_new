<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.orionit.app.orion_payroll_new.form.setting.SettingDatabase">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbarSize="0dp"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="249dp">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Database Local"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#f1f1f1" />

                    <Button
                        android:id="@+id/btnBackupLocal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/style_btn_default"
                        android:text="BACKUP DATABASE LOCAL"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/colorwhite" />

                    <Button
                        android:id="@+id/btnRestoreLocal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/style_btn_default"
                        android:text="RESTORE DATABASE LOCAL"
                        android:textColor="@color/colorwhite" />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#f1f1f1" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="249dp">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Database Cloud"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#f1f1f1" />

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/style_btn_default"
                        android:text="LOG IN"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/colorwhite" />

                    <Button
                        android:id="@+id/btnUploadCloud"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/style_btn_default"
                        android:text="UPLOAD KE DROPBOX"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/colorwhite" />

                    <Button
                        android:id="@+id/btnDownloadCloud"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/style_btn_default"
                        android:text="DOWNLOAD DB DARI DROPBOX"
                        android:textColor="@color/colorwhite" />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#f1f1f1" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView></android.support.constraint.ConstraintLayout>

